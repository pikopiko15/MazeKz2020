@using WebMaze.Models.UserTasks
@model UserTaskViewModel

<div class="w-25">
    <h2>Create Task</h2>
    <form action="@Url.Action("Edit", "UserTasks")" method="post">
        @Html.HiddenFor(task => task.Id)
        <div class="form-group">
            @Html.DisplayNameFor(task => task.Name):
            @Html.TextBoxFor(task => task.Name, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.DisplayNameFor(task => task.Description):
            @Html.TextBoxFor(task => task.Description, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            Start date:
            <div>
                @Html.EditorFor(task => task.StartDate)
            </div>
        </div>
        <div class="form-group">
            End Date:
            <div>
                @Html.EditorFor(task => task.EndDate)
            </div>
        </div>
        <div class="form-group">
            @Html.DisplayNameFor(task => task.Priority):
            @Html.DropDownList("Priority", new SelectList(Enum.GetValues(typeof(WebMaze.DbStuff.Model.UserTask.TaskPriority))), "Select Priority", new { @class = "form-control" })
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a href="@Url.Action("Index", "UserTasks")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
