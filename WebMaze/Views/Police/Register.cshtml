@model WebMaze.Models.Account.LoginViewModel
@using WebMaze.Helpers.Police

@{
    Layout = "_PoliceLayout.cshtml";
    ViewBag.Title = "Регистрация аккаунта";
}

@section BreadLink {
    @Html.BreadCrumb("Полиция", "/Police", "Регистрация")
}

<div class="text-center">
    <form asp-controller="Police" asp-action="Register" method="post">
        <h2>Регистрация нового аккаунта</h2>
        <hr />
        <div class="row">
            <div class="offset-3 col-md-6 text-danger" asp-validation-summary="All"></div>
        </div>
        <div class="form-group row">
            <label for="login" class="offset-md-3 col-md-1">Логин:</label>
            <div class="col-md-5">
                <input class="form-control" name="login" type="text" value="@Model.Login" placeholder="Логин" required />
            </div>
            <span asp-validation-for="Login" />
        </div>
        <div class="form-group row">
            <label for="password" class="offset-md-3 col-md-1">Пароль:</label>
            <div class="col-md-5">
                <input class="form-control" name="password" type="password" placeholder="Пароль" required />
            </div>
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group row form-check form-check-inline">
            <input class="form-check-input" type="checkbox" required />
            <label class="form-check-label">Я согласен с условиями и положениями этого сайта</label>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Войти</button>
        </div>
    </form>
</div>