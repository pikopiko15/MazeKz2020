@using WebMaze.Models.Bus
@model BusManageViewModel

<div>
    @Html.Partial("BusPartial")
</div>

<div>@foreach (var bus in Model.buses)
{
    <div>@bus.BusRouteId;@bus.Capacity;@bus.Id;@bus.RegistrationPlate;</div>
}</div>
<div>
    <form action="@Url.Action("ManageBus", "Bus")" method="post">
        <div>
            Registration plate: @Html.TextBoxFor(x=>x.RegistrationPlate)
        </div>
        <div>
            Capacity: @Html.TextBoxFor(x => x.Capacity)
        </div>
        <div>
            Number of route:@Html.TextBoxFor(x=>x.BusRouteId)
        </div>
        <div>
            Worker ID: @Html.TextBoxFor(x=>x.WorkerId)
        </div>
        <div>
            <input type="submit" value="Add bus" />
        </div>
    </form>
</div>
